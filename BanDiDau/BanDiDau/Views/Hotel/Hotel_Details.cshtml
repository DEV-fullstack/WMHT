@{
    ViewBag.Title = "Hotel_Details";
}

<!DOCTYPE HTML>
<html>
<head>
    <script type="text/javascript">
        function doSubmit(obj) {
            $(obj).submit();
        }
       
    </script>
</head>

<body>
    <div class="container">
        <ul class="breadcrumb">
            <li>
                <a href="index.html">Home</a>
            </li>
            <li>
                <a href="#">United States</a>
            </li>
            <li>
                <a href="#">New York (NY)</a>
            </li>
            <li>
                <a href="#">New York City</a>
            </li>
            <li>
                <a href="#">New York City Hotels</a>
            </li>
            <li class="active">InterContinental New York Barclay</li>
        </ul>

        <div class="booking-item-details">
            <div id="dvAjaxRoomDetails">
                @Html.Partial("_BookingItemHeader")
            </div>
            <div class="gap gap-small"></div>
            <h3>Available Rooms</h3>
            <div class="row">
                <div class="col-md-9" id="dvajaxRomList">
                    @Html.Partial("_RoomList")
                </div>
                @*<div class="mfp-with-anim mfp-dialog mfp-search-dialog mfp-hide" id="search-dialog" style="max-width:1000px">
                    @Html.Partial("_TopAreaSearchPart")
                </div>*@
                @*<div class="col-md-3" id="dvsearchchange">
                    <div class="booking-item-dates-change">
                        <h3 class="booking-title" style="margin-left:35px">
                            <small style="font-size:22px"><a class="popup-text" href="#search-dialog" data-effect="mfp-zoom-out" style="font-size:22px">Change search</a></small>
                        </h3>
                      
                    </div>
                </div>*@
                <div class="col-md-3">
                    <div class="booking-item-dates-change">
                       
                      @using (Ajax.BeginForm("Hotels_ChangeSearch_Results",
                      new AjaxOptions
                      {
                          HttpMethod = "GET",
                          InsertionMode = InsertionMode.Replace,
                          //OnBegin = "onBegin",
                          //OnComplete = "onComplete",
                          //OnSuccess = "onSuccess",
                          UpdateTargetId = "dvajaxRomList",
                          LoadingElementId = "loading",

                      }))
                      {
                          <div>
                              <input type="hidden" id="sumAdultcs" name="sumAdultCS" value="1" />
                              <input type="hidden" id="sumChildcs" name="sumChildCS" value="0" />
                              <input type="hidden" id="sumRoomcs" name="sumRoomCS" value="1" />
                              <input type="hidden" id="ageChild1cs" name="ageChild1CS" value="3"/>
                              <input type="hidden" id="ageChild2cs" name="ageChild1CS"value="3" />
                            @foreach (var item in ViewBag.hotel_Info_Result)
                            {
                                <input type="hidden" id="iCityCodecs" name="iCityCodecs" value="@item.cityCode"/>
                                <input type="hidden" id="hotelNamecs" name="hotelNamecs" value="@item.name" />
                            }
                          </div>

                            <div class="input-daterange" data-date-format="MM d, DD">
                                <div class="form-group form-group-icon-left">
                                    <i class="fa fa-calendar input-icon input-icon-hightlight"></i>
                                    <label>Check in</label>
                                    <input class="form-control" name="start" type="text">
                                </div>
                                <div class="form-group form-group-icon-left">
                                    <i class="fa fa-calendar input-icon input-icon-hightlight"></i>
                                    <label>Check out</label>
                                    <input class="form-control" name="end" type="text">
                                </div>
                            </div>
                            <div class="adult form-group form-group-select-plus">
                                <label>Adults</label>
                                <div class="btn-group btn-group-select-num" data-toggle="buttons">
                                    <label class="btn btn-primary active">
                                        <input type="radio"  id="sumAdult" name="sumAdultradio" value="1">1
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumAdultradio" value="2">2
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumAdultradio"value="3">3
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumAdultradio"value="4">4
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumAdultradio"value="5">5
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumAdultradio"value="6">6
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumAdultradio"value="7">7
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumAdultradio"value="8">8
                                    </label>
                                </div>
                                <select class="form-control hidden">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option selected="selected">6</option>
                                    <option>7</option>
                                    <option>8</option>
                                    <option>9</option>
                                   
                                </select>
                            </div>
                            <div class="child form-group form-group-select-plus">
                                <label>Children</label>
                                <div class="btn-group btn-group-select-num" data-toggle="buttons">
                                    <label class="btn btn-primary active">
                                        <input type="radio" name="sumChildradio"value="0">0
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumChildradio"value="1">1
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumChildradio"value="2">2
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumChildradio"value="3">3
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumChildradio"value="4">4
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumChildradio"value="5">5
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumChildradio"value="6">6
                                    </label>
                                 
                                </div>
                                <select class="form-control hidden">
                                    <option>0</option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option selected="selected">4</option>
                                    <option>5</option>
                                    <option>6</option>
                                </select>
                            </div>
                            <div class="room form-group form-group-select-plus">
                                <label>Rooms</label>
                                <div class="btn-group btn-group-select-num" data-toggle="buttons">
                                    <label class="btn btn-primary active">
                                        <input type="radio" name="sumRoomradio"value="1">1
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumRoomradio"value="2">2
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="sumRoomradio"value="3">3
                                    </label>
                                    
                                </div>
                            </div>
                            <button class="btn btn-primary btn-lg" type="submit">Search for Hotels</button>
                      }
                    </div>
                </div>
            </div>
        </div>

        <div class="gap gap-small"></div>
    </div>
    <script>
        $('.adult input').on('change', function () {
            var sumAdult = $('input[name=sumAdultradio]:checked', '.adult').val();
            $('#sumAdultcs').val(sumAdult);
        });
        $('.child input').on('change', function () {
            var sumChild = $('input[name=sumChildradio]:checked', '.child').val();
            $('#sumChildcs').val(sumChild);
            
        });
        $('.room input').on('change', function () {
            var sumRoom = $('input[name=sumRoomradio]:checked', '.room').val();
            $('#sumRoomcs').val(sumRoom);
        });
    </script>
</body>

</html>
